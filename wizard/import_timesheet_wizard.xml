<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_import_timesheet_wizard" model="ir.ui.view">
        <field name="name">Import chấm công</field>
        <field name="model">wdw.import.timesheet.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="period_id" options="{'no_create': True}"/>
                        <field name="sheet_name" placeholder="Nhập tên sheet (mặc định: BCC)"/>
                        <field name="file" filename="filename"/>
                        <field name="filename" invisible="1"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_import" type="object" string="Import" class="oe_highlight"/>
                    <button string="Hủy" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
    <record id="action_import_timesheet_wizard" model="ir.actions.act_window">
        <field name="name">Import chấm công</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">wdw.import.timesheet.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>